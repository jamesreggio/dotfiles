	autosquash = true
[rerere]
	enabled = true
[status]
	relativePaths = false
[alias]
	a    = add
	aa   = add -A
	ap   = add -p
	b    = branch
	bd   = branch -D
	bm   = branch -m
	c    = commit
	cf   = commit --no-verify
	cm   = commit -m
	cmf  = commit --no-verify -m
	ca   = commit -a
	caf  = commit -a --no-verify
	cam  = commit -a -m
	camf = commit -a --no-verify -m
	cd   = commit --amend
	cdf  = commit --amend --no-verify
	co   = checkout
	cob  = checkout -b
	cp   = cherry-pick
	d    = diff
	dc   = diff --cached
	f    = fetch -p
	g    = grep
	l    = log --pretty=format:"%C(bold\\ blue)%h\\ %Creset%s%C(yellow)%d" --decorate
	ls   = log --pretty=format:"%C(bold\\ blue)%h\\ %C(cyan)%<(15,trunc)%an\\ %Creset%s%C(yellow)%d" --decorate
	ld   = log --pretty=format:"%C(bold\\ blue)%h\\ %C(cyan)%<(10,trunc)%ad\\ %Creset%s%C(yellow)%d" --decorate --date=short
	ldr  = log --pretty=format:"%C(bold\\ blue)%h\\ %C(cyan)%<(21,trunc)%ad\\ %Creset%s%C(yellow)%d" --decorate --date=relative
	m    = merge
	man  = help
	p    = push
	pf   = push --force
	pu   = pull --ff-only
	r    = reset
	rr   = reset HEAD^
	rh   = reset --hard
	rp   = reset -p
	rb   = rebase
	rbi  = rebase -i
	rba  = rebase --abort
	rbc  = rebase --continue
	rem  = remote
	rems = remote -v show
	s    = status --short --branch
	sta  = stash apply
	std  = stash drop
	stl  = stash list
	stp  = stash pop
	sts  = stash save
	sh   = show
	shs  = show --stat
