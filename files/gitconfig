[core]
	editor = vim
	excludesfile = ~/.gitignore
[user]
	name = James Reggio
	email = james.reggio@gmail.com
[github]
	user = jamesreggio
[commit]
	gpgsign = true
[color]
	ui = auto
[grep]
	lineNumber = true
[push]
	default = current
[rebase]
	autosquash = true
[rerere]
	enabled = true
[status]
	relativePaths = false
[alias]
	a    = add
	aa   = add -A
	ap   = add -p
	b    = branch
	bm   = branch -m
	c    = commit
	cf   = commit --no-verify
	cm   = commit -m
	cmf  = commit --no-verify -m
	ca   = commit -a
	caf  = commit -a --no-verify
	cam  = commit -a -m
	camf = commit -a --no-verify -m
	cd   = commit --amend
	cdf  = commit --amend --no-verify
	co   = checkout
	cob  = checkout -b
	coo  = checkout --orphan
	cp   = cherry-pick
	d    = diff
	dc   = diff --cached
	f    = fetch -p
	g    = grep
	l    = log --pretty=format:"%C(bold\\ blue)%h\\ %Creset%s%C(yellow)%d" --decorate
	ls   = log --pretty=format:"%C(bold\\ blue)%h\\ %C(cyan)%<(15,trunc)%an\\ %Creset%s%C(yellow)%d" --decorate
	ld   = log --pretty=format:"%C(bold\\ blue)%h\\ %C(cyan)%<(15,trunc)%ad\\ %Creset%s%C(yellow)%d" --decorate --date=short
	ldr  = log --pretty=format:"%C(bold\\ blue)%h\\ %C(cyan)%<(15,trunc)%ad\\ %Creset%s%C(yellow)%d" --decorate --date=relative
	m    = merge
	man  = help
	p    = push
	pf   = push --force
	pa   = push --mirror
	pu   = pull --ff-only
	r    = reset
	rr   = reset HEAD^
	rh   = reset --hard
	rp   = reset -p
	rb   = rebase
	rbi  = rebase -i
	rba  = rebase --abort
	rbc  = rebase --continue
	rem  = remote
	rems = remote -v show
	s    = status --short --branch
	sta  = stash apply
	std  = stash drop
	stl  = stash list
	stp  = stash pop
	sts  = stash save
	sh   = show
	shs  = show --stat
[protocol]
	version = 2
[credential]
	helper = osxkeychain
